    <script>
      // Manages the counter
      var counter = document.getElementById('counter');
      var localStorage = window.localStorage;
      var counterValue = localStorage.getItem('{{ data.appId }}-counter') ? localStorage.getItem('{{ data.appId }}-counter') : 0;
